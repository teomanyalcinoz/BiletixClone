<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="biletix3.Views.OnlineEtkinlikler"
             Title="Online Etkinlikler">
    <ContentPage.Content>
        <ScrollView>
            <Grid RowSpacing="10">
                <Grid Grid.Row="0">
                    <ImageButton Source="celile.png" Clicked="Celile_Clicked"/>
                    <Label Text="Online Etkinlik" FontSize="16" Padding="3" VerticalOptions="StartAndExpand"
