                    <Grid BackgroundColor="#80000000" Margin="0,100,0,0">
                        <Label Text="16 Nisan" FontSize="16" TextColor="White" Padding="10"
                               VerticalOptions="EndAndExpand" Margin="0,0,0,45"/>
                        <Label Text="Celile - Nazım Hikmet'in Annesi" FontSize="16" TextColor="White" Padding="10" FontAttributes="Bold" 
                           VerticalOptions="EndAndExpand" Margin="0,0,0,25"/>
                        <Label Text="Online Etkinlikler, İstanbul" VerticalOptions="End" FontSize="16" 
                           TextColor="White" Padding="10" />
                    </Grid>
                </Grid>

                <Grid Grid.Row="1">
                    <ImageButton Source="fahrenheit.png" Clicked="fahrenheit_Clicked"/>
